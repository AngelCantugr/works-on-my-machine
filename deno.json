{
  "tasks": {
    "dev": "deno run -A --node-modules-dir=auto npm:astro dev",
    "start": "deno run -A --node-modules-dir=auto npm:astro dev",
    "build": "deno run -A --node-modules-dir=auto npm:astro check && deno run -A --node-modules-dir=auto npm:astro build && deno run -A --node-modules-dir=auto scripts/search/prepare-index.js",
    "preview": "deno run -A --node-modules-dir=auto npm:astro preview"
  },
  "imports": {
    "astro": "npm:astro@^4.0.3",
    "@astrojs/check": "npm:@astrojs/check@^0.9.4",
    "@astrojs/markdoc": "npm:@astrojs/markdoc@^0.8.0",
    "@astrojs/mdx": "npm:@astrojs/mdx@^2.0.0",
    "@astrojs/rss": "npm:@astrojs/rss@^4.0.1",
    "@astrojs/sitemap": "npm:@astrojs/sitemap@^3.0.3",
    "@astrojs/svelte": "npm:@astrojs/svelte@^5.0.0",
    "@astrojs/tailwind": "npm:@astrojs/tailwind@^5.0.3",
    "@fontsource/fira-sans": "npm:@fontsource/fira-sans@^5.0.18",
    "@markdoc/markdoc": "npm:@markdoc/markdoc@^0.3.0",
    "@tailwindcss/aspect-ratio": "npm:@tailwindcss/aspect-ratio@^0.4.2",
    "@tailwindcss/forms": "npm:@tailwindcss/forms@^0.5.7",
    "@tailwindcss/typography": "npm:@tailwindcss/typography@^0.5.10",
    "@types/node": "npm:@types/node@^18.19.3",
    "astro-icon": "npm:astro-icon@^0.8.2",
    "globby": "npm:globby@^14.0.0",
    "gray-matter": "npm:gray-matter@^4.0.3",
    "lunr": "npm:lunr@^2.3.9",
    "mdx": "npm:mdx@^0.3.1",
    "remark-code-titles": "npm:remark-code-titles@^0.1.2",
    "svelte": "npm:svelte@^4.2.8",
    "tailwindcss": "npm:tailwindcss@^3.3.6",
    "typescript": "npm:typescript@^5.3.3"
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "jsxImportSource": "astro"
  }
}
